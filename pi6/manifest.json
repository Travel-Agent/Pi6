  "background": {
    "scripts"   :["eventpage.js"],
    "persistent":false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*"
      , "*://thepiratebay.sx/search/*"
      , "*://*.google.co.il/*"
      , "*://israblog.nana10.co.il/*"
      , "*://*.youtube.com/*"
      , "*://*.cheatography.com/*"
      , "*://*.readthedocs.org/*"
      , "*://*.quora.com/*"
      ],"js": [
        "jquery.js",
        "mousetrap.js",
        "script.js"
      ]
    }
  ]
}
